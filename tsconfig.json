{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "paths": {
      "@/*": ["*"],
      "@hooks/*": ["utils/hooks/*"]
    },
    "typeRoots": ["node_modules/@types", "@types"]
  },
  "include": ["src"]
}
